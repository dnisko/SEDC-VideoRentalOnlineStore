@model List<ViewModels.UserViewModel>

@{
    var filterModel = new FilterViewModel();
}

<div class="col-4">
    <form asp-action="SearchByName" method="post" class="input-group">
        <input asp-for="@filterModel.Name" class="form-control col-6" placeholder="Пребарај..." />
        <button type="submit" class="btn btn-info">Search</button>
    </form>
</div>
@* <div>
    <a asp-action="Create" class="btn btn-primary">Create new pizza</a>
</div> *@
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">FullName</th>
        <th scope="col">UserName</th>
        <th scope="col">CardNumber</th>
        <th scope="col">Email</th>
        <th scope="col">CreatedOn</th>
        <th scope="col">IsSubscriptionExpired</th>
        <th scope="col">SubscriptionType</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <th scope="row">@user.Id</th>
            <td>@user.FullName</td>
            <td>@user.UserName</td>
            <td>@user.CardNumber</td>
            <td>@user.Email</td>
            <td>@user.CreatedOn</td>
            <td>@user.IsSubscriptionExpired</td>
            <td>@user.SubscriptionType</td>
            <td>
                <a asp-action="Details" asp-controller="User" asp-route-id="@user.Id" class="btn btn-primary">Details</a>
                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="btn btn-danger">Remove</a>
            </td>
        </tr>
    }
    </tbody>
</table>

